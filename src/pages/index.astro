---
import Base from "../layouts/Base.astro";
const base = import.meta.env.BASE_URL;
const withBase = (path) => `${base}${path.replace(/^\//, "")}`;
---
<Base title="Home" description="The Quotient Series by Greg Simpson" hero={true}>
  <section class="hero">
    <div class="hero-card">
      <div class="hero-tag">Techno-Thriller</div>
      <h1>The Quotient Series</h1>
      <p>
        Welcome to the home of The Quotient Series — a techno-thriller series that blends espionage, quantum computing,
        and global stakes.
      </p>
      <p>
        Join Jack, Sarah, and the Quotient team as they race around the world to save humanity.
      </p>
      <div class="book-actions">
        <a class="button" href="https://www.simpsong00.com/the-quantum-contingent.html">Read The Quantum Contingent</a>
        <a class="button secondary" href={withBase("books")}>See all books</a>
      </div>
    </div>
    <div class="hero-art" aria-label="The Quotient Series"></div>
  </section>

  <section class="section">
    <h2>Available Now</h2>
    <div class="grid">
      <article class="card book-card">
        <img src="https://www.simpsong00.com/uploads/1/3/7/0/137005184/tqc-front-hd_orig.jpg" alt="The Quantum Contingent book cover" />
        <div>
          <p class="meta">Book One</p>
          <h3>The Quantum Contingent</h3>
          <p>
            A fast-paced techno-thriller with espionage, quantum computing, and global stakes.
          </p>
          <p>
            Pop-culture energy, richly detailed locations, and today’s technologies extrapolated for tomorrow.
          </p>
          <div class="book-actions">
            <a class="button" href="https://www.simpsong00.com/the-quantum-contingent.html">Book details</a>
            <a class="button secondary" href={withBase("author")}>Meet the author</a>
          </div>
        </div>
      </article>
      <article class="card book-card">
        <img src="https://www.simpsong00.com/uploads/1/3/7/0/137005184/quantum-time-book-front_orig.jpg" alt="Quantum Time book cover" />
        <div>
          <p class="meta">Book Two</p>
          <h3>Quantum Time</h3>
          <p>
            A gripping sequel that deepens the world of Quotient and the Quantum Contingent.
          </p>
          <div class="book-actions">
            <a class="button" href="https://www.simpsong00.com/quantum-time.html">Book details</a>
            <a class="button secondary" href={withBase("locations")}>Explore locations</a>
          </div>
        </div>
      </article>
    </div>
  </section>

  <section class="section">
    <div class="card">
      <h2>Explore the World of The Quotient Series</h2>
      <p>
        As a technologist, adventurer, and traveler, I have taken the inspiration from real life experiences and combined
        it with the world of science to bring you compelling adventure stories. Dig into the technology, visit the
        locations, and follow along on the author journey.
      </p>
      <div class="book-actions">
        <a class="button" href={withBase("technology")}>Technology</a>
        <a class="button" href={withBase("locations")}>Locations</a>
        <a class="button secondary" href={withBase("author")}>Author</a>
      </div>
    </div>
  </section>
</Base>
